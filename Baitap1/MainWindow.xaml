<Window x:Class="Baitap1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Baitap1"
        mc:Ignorable="d"
        Title="Se182291-Đỗ Hoàng Quốc Phong" Height="339" Width="576" ScrollViewer.VerticalScrollBarVisibility="Disabled" WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid>
        <Label Content="Hệ số _a:"
               Target="{Binding ElementName=txtA}"
               HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="txtA" HorizontalAlignment="Center" Margin="0,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="558" FontSize="20"/>
        <Label Content="Hệ số _b" Target="{Binding ElementName=txtB}"
               HorizontalAlignment="Left" Margin="10,86,0,0" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="0.405,0.231"/>
        <TextBox x:Name="txtB" HorizontalAlignment="Center" Margin="0,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="556" FontSize="20"/>
        <Label Content="Kết quả:" HorizontalAlignment="Left" Margin="10,152,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBlock x:Name="tbKetqua" HorizontalAlignment="Center" Margin="0,194,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Width="556" Background="#FF05C0FF"/>
        <Button x:Name="btnCong"
        Width="114" Height="42"
        HorizontalAlignment="Left" Margin="76,244,0,0"
        VerticalAlignment="Top" FontSize="20"
        Click="btnCong_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="pack://siteoforigin:,,,/images/sum.png" Width="24" Height="24"/>
                <TextBlock Text="Tổng" Margin="5,0" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
        <Button x:Name="btnThoat"
        Width="126" Height="42"
        HorizontalAlignment="Left" Margin="288,244,0,0"
        VerticalAlignment="Top" FontSize="20"
        Click="btnThoat_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="pack://siteoforigin:,,,/images/logout.png" Width="24" Height="24"/>
                <TextBlock Text="Thoát" Margin="5,0" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

    </Grid>
</Window>
