<Window x:Class="Baitap3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Baitap3"
        mc:Ignorable="d"
        Title="Se182291-Đỗ Hoàng Quốc Phong" Height="385" Width="435" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,-1">
        <GroupBox Header="Bạn thấy hệ thống thế nào ? " Margin="10,0,10,235" FontSize="15">
            <Grid Height="84" Margin="2,0,-2,0" RenderTransformOrigin="0.492,0.44">
                <RadioButton GroupName="hethong" x:Name="radRatTot" Content="Rất tốt" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" FontSize="15"/>
                <RadioButton GroupName="hethong" x:Name="radTot" Content="Tốt" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" FontSize="15"/>
                <RadioButton GroupName="hethong" x:Name="radTamDuoc" Content="Tạm được" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" FontSize="15"/>
                <RadioButton GroupName="hethong" x:Name="radKhongTot" Content="Không tốt" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" FontSize="15"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Giới tính của bạn là gì?" Margin="10,125,10,157" FontSize="15">
            <StackPanel Height="37">
                <RadioButton x:Name="radNam" GroupName="gioitinh" Content="Nam" Width="390" Height="18"/>
                <RadioButton x:Name="radNu" GroupName="gioitinh" Content="Nữ" Width="391" Height="15"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Chọn tác vụ:" Margin="10,218,10,37" FontSize="15">
            <Grid Height="83" Margin="2,0,-2,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="39*"/>
                    <ColumnDefinition Width="98*"/>
                    <ColumnDefinition Width="266*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnGui" Content="Gửi phản hồi" HorizontalAlignment="Left" Margin="1,0,0,0" VerticalAlignment="Center" Height="51" Width="120" IsCancel="True" FontSize="15" Grid.Column="1" Grid.ColumnSpan="2" Click="btnGui_Click" />
                <Button x:Name="btnHuy" Content="Hủy" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="120" FontSize="15" Grid.Column="2" Click="btnHuy_Click"/>

            </Grid>
        </GroupBox>
    </Grid>
</Window>
